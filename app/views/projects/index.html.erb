<div class="set-min-height">
  <br>
  <h3 class="text-center"> My Projects</h3>
  <br>
  <div class="over-scroll">
    <table class="table table-hover table-striped text-center " >
      <thead>
        <tr>
          <th style="font-family:'Nova Square', cursive;">Name</th>
          <th style="font-family:'Nova Square', cursive;">Description</th>
          <th style="font-family:'Nova Square', cursive;">Show</th>
          <th style="font-family:'Nova Square', cursive;">Edit</th>       
          <th style="font-family:'Nova Square', cursive;">Delete</th>      
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= link_to 'Show', project, class: "btn btn-primary btn-sm"  %></td>
            <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-info btn-sm" %></td>
            <td><%= link_to 'Destroy', project, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <%= link_to 'New Project', new_project_path, class: "btn btn-sm btn-success" %>
</div>