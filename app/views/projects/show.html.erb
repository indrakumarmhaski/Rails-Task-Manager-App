<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<hr>
<h3>Tasks:</h3>
<ul>
  <% @project.tasks.each do |p| %>
    <% if p.complete %>
        <li class="font-italic"><%= p.title %> </li>
    <% else %>
        <li class="font-weight-normal" ><%= p.title %> </li>
    <% end %>
  <% end %>
</ul>
<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
